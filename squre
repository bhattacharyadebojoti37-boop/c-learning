#include <stdio.h>

int main() {
    int n, i;

    // Input from user
    printf("Enter a positive integer (n >= 0): ");
    scanf("%d", &n);

    // Display header
    printf("\nNumber\tSquare\tCube\n");
    printf("--------------------------\n");

    // Loop through numbers 1 to n
    for (i = 1; i <= n; i++) {
        printf("%d\t%d\t%d\n", i, i*i, i*i*i);
    }

    return 0;
}
