#include <stdio.h>

int main()
{
    int n, i = 1;

    // Input from user
    printf("Enter a positive integer (n >= 0): ");
    scanf("%d", &n);

    printf("\nNumber\tSquare\tCube\n");
    printf("------------------------\n");

    // While loop to print number, square and cube
    while(i <= n)
    {
        printf("%d\t%d\t%d\n", i, i*i, i*i*i);
        i++;
    }

    return 0;
}
